@using Microsoft.AspNetCore.Identity
@using SocNetwork.Domain.Entity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager;


@model SocNetwork.Domain.ViewModels.User.MainViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div>Hello @User.Identity!</div>
}
else
{


<div class="row">
    <div class="side">
        <div class="center">
            Пользуйтесь нашей самой крутой соцсетью! Регистрируйтесь всего за 2 минуты, делитесь мыслями, находите новых друзей.
        </div>
        <img class="main-img" src="https://pngimg.com/uploads/cat/cat_PNG50511.png" />
    </div>
    <a asp-area="" asp-controller="Home" asp-action="Index">SocialNetwork</a>


    <div class="main">
        <partial name="Login" model="Model.LoginView" />
        <partial name="Register" model="Model.RegisterView" />
    </div>

</div>
}